<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_donation___frame_layout___add_image_container"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_picture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/upload_a_cover"
                    android:textColor="@color/lightBlue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___donation_name_container"
            style="@style/VkFormLinearLayout">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/donation_name_text_view_hint" />

            <EditText
                style="@style/VkEditText"
                android:hint="@string/donation_name_edit_text_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___donation_sum_container"
            style="@style/VkFormLinearLayout">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/donation_sum_text_view_hint" />

            <EditText
                style="@style/VkEditText"
                android:hint="@string/donation_sum_edit_text_hint"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___donation_aim_container"
            style="@style/VkFormLinearLayout">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/donation_aim_text_view_hint" />

            <EditText
                style="@style/VkEditText"
                android:hint="@string/donation_aim_edit_text_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___donation_description_container"
            style="@style/VkFormLinearLayout">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/donation_description_text_view_hint" />

            <EditText
                style="@style/VkEditText"
                android:hint="@string/donation_description_edit_text_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___card_for_donation"
            style="@style/VkFormLinearLayout">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/card_for_donation_text_view_hint" />

            <EditText
                style="@style/VkEditText"
                android:text="Счёт VK Pay 1234" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_donation___linear_layout___author"
            style="@style/VkFormLinearLayout"
            android:visibility="gone">

            <TextView
                style="@style/VkFormHintTextView"
                android:text="@string/author" />

            <EditText
                style="@style/VkEditText"
                android:text="Матвей Правосудов" />
        </LinearLayout>

        <Button
            android:id="@+id/fragment_donation_data___button___next_or_create_donation"
            style="@style/VkButtonFilled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/further" />
    </LinearLayout>
</ScrollView>
