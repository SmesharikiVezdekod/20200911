<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            android:src="@drawable/kitten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineHeight="28dp"
            android:text="@string/snippet_header"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:lineHeight="28dp"
            android:text="@string/Matvey_author"
            android:textColor="@color/colorAuthor"
            android:textSize="@dimen/text_size_in_full"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="28dp"
            android:text="@string/everyMonth"
            android:textColor="@color/colorUnderAuthor"
            android:textSize="@dimen/text_size_in_full"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineHeight="18dp"
            android:text="@string/collect_in_september"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_in_full"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/WideProgressBar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:progress="80"
            android:progressDrawable="@drawable/wide_progress_bar_colors"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="84dp"
            android:text="@string/sum_is_collected"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_in_full"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/total_sum"
            android:textColor="@color/colorUnderAuthor"
            android:textSize="@dimen/text_size_in_full"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            app:layout_constraintVertical_bias="0.6" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineHeight="20dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/full_text"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <LinearLayout
            android:id="@+id/post_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/like"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="SF Pro Text"
                android:lineHeight="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@string/num_of_like"
                android:textColor="@color/colorUnderAuthor"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size_in_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:paddingStart="27dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/comment"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="SF Pro Text"
                android:lineHeight="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@string/num_of_comment"
                android:textColor="@color/colorUnderAuthor"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size_in_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:paddingStart="27dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/share"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="SF Pro Text"
                android:lineHeight="18dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="@string/num_of_share"
                android:textColor="@color/colorUnderAuthor"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size_in_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:paddingStart="110dp"
                android:paddingTop="17.5dp"
                android:paddingBottom="16.5dp"
                android:src="@drawable/eye"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="SF Pro Text"
                android:lineHeight="18dp"
                android:paddingStart="7dp"
                android:paddingTop="13.5dp"
                android:paddingEnd="12.5dp"
                android:paddingBottom="12.5dp"
                android:text="@string/num_of_views"
                android:textColor="@color/colorOfNumberOfViews"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size_in_full" />
        </LinearLayout>

        <View
            android:id="@+id/separator_above_comment"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/post_footer" />

        <LinearLayout

            android:id="@+id/sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/separator_above_comment">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/avatar2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mainText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/name"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/time"
                        android:textColor="@color/vkEditTextHint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="12dp"
                        android:text="@string/send"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@+id/sender">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/avatar" />

            <EditText
                style="@style/VkFormCommentEditText"
                android:autofillHints="@string/todo"
                android:drawableEnd="@drawable/smile"
                android:hint="@string/comment"
                android:inputType="text"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="25dp" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/commentLay" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/separator">

            <TextView
                android:id="@+id/donated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_delimiter_to_collected"
                android:layout_marginBottom="8dp"
                android:text="@string/snippet_collected"
                android:textColor="@color/black"
                android:textSize="@dimen/snippet_collected_textSize"
                app:layout_constraintStart_toStartOf="parent" />

            <ProgressBar
                android:id="@+id/small_progress_bar"
                style="@style/VkGreenProgressBar"

                android:layout_width="230dp"
                android:layout_height="4dp"
                android:layout_marginTop="32dp"
                android:progress="87"
                android:progressDrawable="@drawable/progress_bar_green"
                app:layout_constraintBottom_toBottomOf="@id/donate_button"
                app:layout_constraintStart_toStartOf="parent" />

        </FrameLayout>

        <Button
            android:id="@+id/donate_button"
            style="@style/VkButtonOutlinedGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="40dp"
            android:text="@string/snippet_help"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frameLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>