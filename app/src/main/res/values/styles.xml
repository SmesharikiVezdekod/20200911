<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#818C99</item>
    </style>

    <style name="VkButtonFilled" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/vk_button_filled</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="VkButtonOutlined" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:background">@drawable/vk_button_outline</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="VkProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/lightBlue</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="VkCard" parent="CardView">
        <item name="cardCornerRadius">@dimen/vk_card_corner_radius</item>
    </style>
    
</resources>