<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.

    </style>

    <style name="WideProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/colorGreen</item>
        <item name="cornerRadius">6dp</item>

    </style>

    <style name="PlaceholderText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#818C99</item>
    </style>

    <style name="VkButtonFilled" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/vk_button_filled</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="VkButtonOutlined" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:background">@drawable/vk_button_outline</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="VkButtonOutlinedGreen" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/vk_green_button_outline</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="VkProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/lightBlue</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="VkGreenProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/colorGreen</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="VkCard" parent="CardView">
        <item name="cardCornerRadius">@dimen/vk_card_corner_radius</item>
    </style>

    <style name="VkEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/vk_edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/vkEditTextHint</item>
    </style>

    <style name="VkFormHintTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="VkFormLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="VkFormCommentEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/vk_edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/vkEditTextHint</item>
    </style>

</resources>