<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/progressBar_cornerRadius"/>
            <gradient
                android:startColor="@color/lightBlueTransparent"
                android:endColor="@color/lightBlueTransparent"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/progressBar_cornerRadius"/>
                <gradient
                    android:startColor="@color/lightBlue"
                    android:endColor="@color/lightBlue"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>